#menu
  padding 1em 2em 0.2em 2em
  background-color #fff
  border-bottom 1px solid #e7e7e7
  border-radius 6px 6px 0 0
  box-shadow 0 2px 6px rgba(100, 100, 100, 0.3)

#post-content
  background-color #fff
  border-radius 0 0 6px 6px
  box-shadow 0 2px 6px rgba(100, 100, 100, 0.3)
  padding 1em 1.5em

.pagination
  background #fff

  a
    display block
    padding 5px 10px

    &:hover
      text-decoration none
      text-shadow none
