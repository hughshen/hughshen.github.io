*
  margin: 0;
  padding: 0;

body
  background: #e6e6e6;
  font-family: "Microsoft Yahei";
  text-shadow: 0 1px 0 #fff;

#content
  padding: 20px 15px;
  max-width: 968px;
  margin: auto;
  border-radius: 4px;
  overflow: hidden;

a 
 text-decoration: none;

a:link, a:visited
  color: #2d96bd;

a:hover, a:active 
  color: #9c0001;
