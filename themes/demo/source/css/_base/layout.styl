*
  margin 0
  padding 0

body
  font 13px/1.5 Verdana,sans-serif
  background #599acb
  color #000

#content
  padding 1.5em 1em
  max-width 750px
  margin auto
  overflow hidden

.nothing-wrap
  max-width 750px
  margin 1em auto

  .nothing
    width 90%
    background-color #fff
    color #9c0001
    margin 0 auto
    padding 0.1em
    border 1px solid #000
    text-align center

a 
 text-decoration none

a:link, a:visited
  color #2d96bd

a:hover, a:active 
  color #9c0001
